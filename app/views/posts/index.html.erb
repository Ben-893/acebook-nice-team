<% @posts.each do |post| %>

  <div>
    <p id="messageBox"><%= post.message %></p>
  </div>

  <p id="time">Created at <%= post.created_at.strftime("%e-%m-%y %H:%M") %> by <%= post.poster_name %><br><br>

<% post.comments.each do |comment| %>
<p><%= comment.body %></p>
<% end %>

<div>
      <h2>Add Comment</h2>
      <%= form_for([post, post.comments.build]) do |f| %>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit "Create Comment" %>
        </p>
      <% end %>
    </div>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
