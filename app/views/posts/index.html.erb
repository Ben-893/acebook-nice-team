<%= link_to "New post", new_post_path %>

<% @posts.each do |post| %>

<div>
    <p id="messageBox"><%= post.message %></p>
</div>
    <p id="time">Created at <%= post.created_at.strftime("%e-%m-%y %H:%M") %> by <%= post.poster_name %><br>
    </p>

    <% if post.like_id(post.id, current_user.id) %>
    <%= button_to "delete like", {:controller => :likes,
                                  :action => 'destroy', :id => post.like_id(post.id, current_user.id) },
                                  :method => :delete %>
  <% else %>
     <p><%= button_to 'Like', { controller: :likes,
                                action: 'create',
                                likes: {post_id: post.id,
                                user_id: current_user.id }}%></p>
  <% end %>

  <div>
    <%= form_for([post, post.comments.build]) do |f| %>
      <p><%= f.text_field :body %></p>
      <p><%= f.submit "Create Comment" %></p>
    <% end %>
  </div>

  <% post.comments.each do |comment| %>
    <% if comment.body %>
      <p id="messageBox2"><%= comment.body %></p>
      <p id="time"><%= comment.created_at.strftime("%e-%m-%y, %H:%M") %> by <%= comment.poster_name %></p>
    <% end %>
  <% end %>
<% end %>


